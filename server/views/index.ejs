<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <title>Easy Note</title>
    <script src="scripts/showdown.min.js"></script>
    <style>
      .note_body_textarea {
        width: 100%;
        min-height: 100px;
        font-family: Arial, sans-serif;
        font-size: 16px;
        max-height: 75vh;
        line-height: 1.4;
      }
      .hiddendiv {
        display: none;
        white-space: pre-wrap;
        word-wrap: break-word;
      }
    </style>
  </head>
  <body style="overflow: hidden">
    <div class="row">
      <div
        class="col-3 pe-0"
        style="border-right: 1px solid #000; height: 100vh"
      >
        <div class="list-header border-bottom">
          <div class="d-flex p-2">
            <h3 class="m-0 pb-0"><i class="bi bi-journal-text"></i></h3>
            <div class="input-group mb-2">
              <input
                type="text"
                class="form-control mx-2"
                placeholder="search note"
              />
            </div>
            <button type="button" class="btn btn-primary" style="height: 100%">
              <i class="bi bi-file-earmark-plus-fill"></i>
            </button>
          </div>
        </div>
        <ul
          class="list-group list-group-flush p-3"
          style="height: 90vh; width: 100%; overflow: auto"
        >
          <li class="list-group-item">Lorem ipsum dolor sit amet conse</li>
          <li class="list-group-item">A second item</li>
          <li class="list-group-item">A third item</li>
          <li class="list-group-item">A third item</li>
          <li class="list-group-item">And a fifth one</li>
        </ul>
      </div>
      <div class="col-9 p-0 m-0">
        <div class="container ps-0">
          <div class="note-header border-bottom">
            <div class="d-flex justify-content-around py-2 pe-4">
              <div></div>
              <div>
                <input
                  type="radio"
                  class="btn-check"
                  name="edit-preview"
                  id="edit"
                  autocomplete="off"
                  checked
                />
                <label class="btn btn-outline-primary" for="edit" id="editBtn">Edit</label>
                <input
                  type="radio"
                  class="btn-check"
                  name="edit-preview"
                  id="preview"
                  autocomplete="off"
                />
                <label class="btn btn-outline-primary" for="preview" id="previewBtn"
                  >Preview</label
                >
              </div>
              <div>
                <button
                  type="button"
                  class="btn btn-success me-3"
                  style="height: 100%"
                >
                  <i class="bi bi-floppy"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-danger"
                  style="height: 100%"
                >
                  <i class="bi bi-trash3"></i>
                </button>
              </div>
            </div>
          </div>
          <div id="view-note" class="p-3"></div>
          <div id="enter-note" class="note-body p-3">
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control fs-5"
                id="note-hader"
                placeholder="Header"
              />
              <label for="floatingInput">Header</label>
            </div>
            <div class="mb-3">
              <textarea
                class="form-control note_body_textarea"
                placeholder="Type here ..."
                id="note-body-text"
              ></textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      let textareas = document.querySelectorAll(".note_body_textarea"),
        hiddenDiv = document.createElement("div"),
        content = null;
      for (let j of textareas) {
        j.classList.add("txtstuff");
      }
      hiddenDiv.classList.add("note_body_textarea");
      hiddenDiv.style.display = "none";
      hiddenDiv.style.whiteSpace = "pre-wrap";
      hiddenDiv.style.wordWrap = "break-word";
      for (let i of textareas) {
        (function (i) {
          i.addEventListener("input", function () {
            i.parentNode.appendChild(hiddenDiv);
            i.style.resize = "none";
            // i.style.overflow = "hidden";
            content = i.value;
            content = content.replace(/\n/g, "<br>");
            hiddenDiv.innerHTML = content + '<br style="line-height: 3px;">';
            hiddenDiv.style.visibility = "hidden";
            hiddenDiv.style.display = "block";
            i.style.height = hiddenDiv.offsetHeight + "px";
            hiddenDiv.style.visibility = "visible";
            hiddenDiv.style.display = "none";
          });
        })(i);
      }
    </script>
    <script>
      const converter = new showdown.Converter()
      const viewNote = document.getElementById("view-note");
      const enterNote = document.getElementById("enter-note");
      const editBtn = document.getElementById('editBtn');
      const previewBtn = document.getElementById('previewBtn');

      editBtn.addEventListener('click', ()=>{
        enterNote.style.display='block';
        viewNote.style.display='none';
      })

      previewBtn.addEventListener('click', ()=>{
        let noteHeader = document.getElementById("note-hader").value
        let noteBody = converter.makeHtml(document.getElementById("note-body-text").value);
        enterNote.style.display='none';
        viewNote.style.display='block';
        viewNote.innerHTML = `<h1>${noteHeader}</h1>`+noteBody
      });
    </script>
  </body>
</html>
